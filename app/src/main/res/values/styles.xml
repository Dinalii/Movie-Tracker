<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/gray_400</item>
        <item name="color">@color/light_blue_400</item>
    </style>
    <style name="AppTheme.AppBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>


    <style name="RatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

</resources>


